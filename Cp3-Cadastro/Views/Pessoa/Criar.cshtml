@model PessoaModel
@{
    ViewData["Title"] = "Editar Pessoa";
}

<div class="text-center">
    <h1 class="">Cadastrar Pessoa</h1>
    <br />
</div>
<form asp-controller="Pessoa" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome_pessoa">Nome <span class="text-danger">*</span></label>
        <input type="text" asp-for="nome_pessoa" class="form-control" placeholder="Digite seu nome.">
    </div>
    <div class="form-group">
        <label for="email_pessoa">Email <span class="text-danger">*</span></label>
        <input type="text" asp-for="email_pessoa" class="form-control" placeholder="Digite seu email.">
    </div>
    <div class="form-group">
        <label for="senha_pessoa">Senha <span class="text-danger">*</span></label>
        <input type="password" asp-for="senha_pessoa" class="form-control" placeholder="Digite sua senha.">
    </div>
    <div class="form-group">
        <label for="cpf_pessoa">CPF <span class="text-danger">*</span></label>
        <input type="text" asp-for="cpf_pessoa" class="form-control" placeholder="XXX.XXX.XXX-XX">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Pessoa" asp-action="Index" role="button">Voltar</a>
</form>
